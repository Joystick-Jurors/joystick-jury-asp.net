@page
@using JoystickJury.Helpers
@using Microsoft.VisualStudio.Web.CodeGenerators.Mvc.Templates.Blazor
@model JoystickJury.Pages.Games.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].IgdbId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].SmallCover)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].Genres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].Platforms)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Game) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IgdbId)
            </td>
            <td>
	            @* @Html.DisplayFor(modelItem => item.IgdbCover) *@
                <img src=@item.SmallCover alt="@($"{item.Name} cover art")">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="multiline">@Html.DisplayFor(modelItem => item.Genres)</td>
            <td class="multiline">@Html.DisplayFor(modelItem => item.Platforms)</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
