@page "{id:int?}"
@model JoystickJury.Pages.Games.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Game.Id" />
            <div class="form-group">
                <label asp-for="Game.IgdbId" class="control-label"></label>
                <input asp-for="Game.IgdbId" class="form-control" />
                <span asp-validation-for="Game.IgdbId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.IgdbCover" class="control-label"></label>
                <input asp-for="Game.IgdbCover" class="form-control" />
                <span asp-validation-for="Game.IgdbCover" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.ReleaseDate" class="control-label"></label>
                <input asp-for="Game.ReleaseDate" class="form-control" />
                <span asp-validation-for="Game.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Name" class="control-label"></label>
                <input asp-for="Game.Name" class="form-control" />
                <span asp-validation-for="Game.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
	            <label asp-for="Game.Genres" class="control-label"></label>
                <textarea asp-for="Game.Genres" class="form-control"></textarea>
                <span asp-validation-for="Game.Genres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Platforms" class="control-label"></label>
	            <textarea asp-for="Game.Platforms" class="form-control"></textarea>
                <span asp-validation-for="Game.Platforms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
